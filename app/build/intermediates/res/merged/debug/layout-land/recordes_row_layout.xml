<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TxtNome"
            android:layout_alignEnd="@+id/textView22"
            android:layout_alignParentStart="true"
            android:text="Id: "
            android:textColor="@android:color/background_dark"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/TxtId"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView20"
            android:layout_below="@+id/textView18"
            android:text="ID"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView20"
            android:text="Nome: "
            android:textColor="@android:color/background_dark"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/TxtNome"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/TxtId"
            android:layout_below="@+id/TxtId"
            android:layout_toEndOf="@+id/textView23"
            android:layout_weight="1"
            android:text="Nome"
            android:textColor="#0000FF"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TxtIdade"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:text="Idade: "
            android:textColor="@android:color/background_dark"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/TxtIdade"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TxtNome"
            android:layout_below="@+id/TxtNome"
            android:layout_weight="1"
            android:text="Idade"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TxtAcertos"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:text="Acertos: "
            android:textColor="@android:color/background_dark"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/TxtAcertos"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TxtIdade"
            android:layout_below="@+id/TxtIdade"
            android:layout_weight="1"
            android:text="Acertos"
            android:textColor="#0000FF"
            android:textStyle="normal|bold" />

    </LinearLayout>

</RelativeLayout>