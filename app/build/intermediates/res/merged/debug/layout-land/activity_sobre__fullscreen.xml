<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="com.example.alexf.mathkids.com.example.alexf.calculus.Sobre_FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center" android:keepScreenOn="true"
        android:text="@string/dummy_content" android:textColor="#33b5e5" android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/fundo_quadro" android:fitsSystemWindows="true">

        <TextView android:id="@+id/textView5" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="20dp"
            android:fontFamily="casual" android:text="Calculus - Sobre"
            android:textAlignment="center" android:textColor="#1E90FF" android:textSize="30sp"
            android:textStyle="normal|bold" />

        <ListView android:id="@+id/ListaSobre" style="@style/Widget.AppCompat.ListView"
            android:layout_width="539dp" android:layout_height="190dp"
            android:layout_marginLeft="30dp" android:layout_marginTop="60dp"
            android:minHeight="52dp" android:scrollbarDefaultDelayBeforeFade="1400"
            android:scrollbarFadeDuration="1400" android:scrollbarSize="20dp" />

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">


            <Button android:id="@+id/dummy_button" style="?metaButtonBarButtonStyle"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:background="@color/black_overlay"
                android:fontFamily="sans-serif-medium" android:text="@string/dummy_button"
                android:textColor="@color/colorAccent" android:textSize="20sp"
                android:textStyle="normal|bold" />


        </LinearLayout>

    </FrameLayout>

</FrameLayout>
