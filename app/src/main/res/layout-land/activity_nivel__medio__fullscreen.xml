<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.alexf.mathkids.com.example.alexf.calculus.Nivel_Medio_FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo_quadro"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black_overlay"
                android:fontFamily="sans-serif-medium"
                android:text="@string/dummy_button"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="normal|bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:text="Nível Médio - Calcule"
            android:textAlignment="center"
            android:textColor="#1E90FF"
            android:textSize="40sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/TxtValor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="130dp"
            android:fontFamily="casual"
            android:textColor="@android:color/holo_green_light"
            android:textSize="50sp"
            android:textStyle="normal|bold"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/TxtOper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="130dp"
            android:text="-"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="50sp"
            android:textStyle="normal|bold"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/TxtValor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="130dp"
            android:fontFamily="casual"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="50sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/igual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="130dp"
            android:fontFamily="casual"
            android:text="@string/igual"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:textStyle="normal|bold"
            tools:ignore="RtlHardcoded" />


        <TextView
            android:id="@+id/lblResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="185dp"
            android:fontFamily="casual"
            android:text="@string/avancar"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="45sp"
            android:textStyle="normal|bold"
            tools:ignore="RtlHardcoded" />


        <TextView
            android:id="@+id/TxtAcertos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="70dp"
            android:fontFamily="casual"
            android:text="Acertos:"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/TxtErros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="90dp"
            android:fontFamily="casual"
            android:text="Erros:"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/TxtResultado"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="130dp"
            android:background="?android:attr/colorControlHighlight"
            android:ems="6"
            android:fontFamily="casual"
            android:inputType="number"
            android:maxLength="4"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorLink="?android:attr/textColorPrimaryInverse"
            android:textSize="40sp"
            android:textStyle="normal|bold"
            tools:ignore="LabelFor,RtlHardcoded"
            tools:targetApi="lollipop" />

        <ImageButton
            android:id="@+id/BtnVerifica"
            android:layout_width="64dp"
            android:layout_height="61dp"
            android:layout_marginLeft="480dp"
            android:layout_marginTop="130dp"
            android:background="@color/colorPrimary"
            android:contentDescription=""
            android:src="@android:drawable/ic_menu_send"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageButton
            android:id="@+id/BtnNovaJogada"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="480dp"
            android:layout_marginTop="200dp"
            android:background="@color/colorAccent"
            android:contentDescription=""
            android:src="@android:drawable/ic_media_ff"
            android:visibility="visible"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </FrameLayout>

</FrameLayout>
